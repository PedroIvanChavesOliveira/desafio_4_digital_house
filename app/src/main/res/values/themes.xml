<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Desafio_4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="TextInputDefault" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="TextInputSearchHome">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:hint">@string/string_search_game</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="startIconDrawable">@drawable/ic_baseline_search_20</item>
        <item name="startIconCheckable">false</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_baseline_mic_20</item>
    </style>

    <style name="ButtonDefault" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="TextViewGamesRecyclerView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="ArrowBackDefault" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_ios_24</item>
    </style>

    <style name="TextViewGameDescription" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageViewGameDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.7</item>
        <item name="android:src">@drawable/games_placeholder</item>
    </style>

    <style name="TextViewGameTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FabButtonDefault">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_baseline_add_20</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ImageViewAddAndEditGame">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:src">@drawable/camera_placeholder</item>
    </style>

    <style name="CardViewDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>
</resources>